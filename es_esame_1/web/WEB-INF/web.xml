<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app PUBLIC '-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN' 'http://java.sun.com/dtd/web-app_2_3.dtd'>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation=" http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
  version="4.0">
    <display-name>TemplateJavscript</display-name>
    <description>A template web app just to show DOM, Javascript code and DHTML events</description>

	<!-- === servlets ============================================================== -->
	
	<servlet>
	<servlet-name>login</servlet-name>
	<jsp-file>/pages/login.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
	<servlet-name>login</servlet-name>
	<url-pattern>/login</url-pattern>
	</servlet-mapping>
	
	<servlet>
	<servlet-name>productlist</servlet-name>
	<jsp-file>/pages/productList.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
	<servlet-name>productlist</servlet-name>
	<url-pattern>/products</url-pattern>
	</servlet-mapping>

	<servlet>
	<servlet-name>attrazioni</servlet-name>
	<jsp-file>/pages/attrazioni.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
	<servlet-name>attrazioni</servlet-name>
	<url-pattern>/attrazioni</url-pattern>
	</servlet-mapping>

	<!-- === Welcome files ============================================================== -->

	<welcome-file-list>
		<welcome-file>/pages/login.jsp</welcome-file>
	</welcome-file-list>
	
	<!-- === Error handlig ============================================================== -->

	<error-page>
     <error-code>404</error-code>
     <location>/errors/notfound.html</location>
	</error-page>

</web-app>

